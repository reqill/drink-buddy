{
  "name": "drink-buddy",
  "private": true,
  "version": "1.0.0",
  "contributors": [
    "Mikołaj Mrózek <mikolajmarcinmrozek@gmail.com> (https://reqill.github.io/portfolio-2022)",
    "Adam Maciuga"
  ],
  "main": "index.js",
  "prisma": {
    "schema": "./src/database/prisma/schema.prisma",
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "format": "prettier --write ./**/*.{ts,tsx}",
    "lint": "eslint --fix \"**/*.{ts,tsx}\"",
    "commit": "git add . && cz",
    "check": "tsc --project tsconfig.json --pretty --noEmit",
    "dev": "cross-env APP_ENV=local next dev",
    "prepare": "husky install",
    "start": "next start",
    "build": "next build",
    "export": "next export",
    "test": "jest --config ./jest.config.ts"
  },
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "@reduxjs/toolkit": "^1.8.6",
    "apollo-server-micro": "^3.10.3",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "formik": "^2.2.9",
    "graphql": "^16.6.0",
    "i18next": "^22.0.3",
    "micro": "^9.4.1",
    "micro-cors": "^0.1.1",
    "next": "13.0.0",
    "next-runtime-dotenv": "^1.5.1",
    "nexus": "^1.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^8.0.4",
    "redux": "^4.2.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.0",
    "@types/micro-cors": "^0.1.2",
    "@types/node": "^18.11.7",
    "@types/react": "^18.0.24",
    "@types/react-redux": "^7.1.24",
    "autoprefixer": "^10.4.12",
    "babel-jest": "^29.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.26.0",
    "eslint-config-next": "13.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "formik": "^2.2.9",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "prisma": "^4.5.0",
    "react-test-renderer": "^18.2.0",
    "tailwindcss": "^3.2.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "yup": "^0.32.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "tagFormat": "v${version}",
    "branches": [
      {
        "name": "develop"
      },
      {
        "name": "main",
        "range": "1.x.x",
        "channel": "1.x.x"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "build",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "patch"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "release",
              "release": "major"
            },
            {
              "type": "hotfix",
              "release": "minor"
            },
            {
              "type": "test",
              "release": false
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md"
          ]
        }
      ]
    ]
  }
}
